<page>
  <display-name>Game page</display-name>
  <config>
    <input type="ContentSelector" name="victoryAudio">
      <label>Victory Music</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <allowContentType>media:audio</allowContentType>
      </config>
    </input>
    <input type="TextLine" name="hipchatRoom">
      <label>Hipchat Room Name</label>
      <occurrences minimum="0" maximum="1"/>
      <default>foos</default>
    </input>
    <input type="TextLine" name="hipchatToken">
      <label>Hipchat Room Token</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </config>
  <regions>
    <region name="main"/>
  </regions>
</page>